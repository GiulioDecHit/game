<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:beans="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
http://www.springframework.org/schema/beans ">

    <context:component-scan base-package="com.dechit.cv.example"/>

    <beans:bean id="operationDao" class="com.dechit.cv.example.operationDAO.OperationDaoImp">
    </beans:bean>
    <!-- aggiungo i bean di mapping con base operationDAO -->
    <beans:bean id="userService" class="com.dechit.cv.example.service.UserServiceImpl">
    </beans:bean>
    <beans:bean id="matchService" class="com.dechit.cv.example.service.MatchServiceImp">
    </beans:bean>
    <beans:bean id="rankingService" class="com.dechit.cv.example.service.RankingServiceImpl">
    </beans:bean>

    <beans:bean id="transactionManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory"/>
    </beans:bean>

</beans>